{% extends "govuk-frontend/template.njk" %}
{% from "govuk-frontend/components/button/macro.njk" import govukButton -%}
{% from "govuk-frontend/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk-frontend/components/back-link/macro.njk" import govukBackLink %}
{% block pageTitle %}
Gov UK Air  Quality Beta Starter
{% endblock %}
<base href="/" />
{% block head %}

<meta content="text/html; charset=UTF-8; X-Content-Type-Options=nosniff" http-equiv="Content-Type" />
  <link rel="stylesheet" href="/assets/govuk-frontend.min.css">
  <link rel="stylesheet" href="/assets/main.css">
  <link rel="stylesheet" href="/assets/application.css">
{% endblock %}
{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: "BETA"
    },
    html: 'This is a new service â€“ your <a class="govuk-link" href="/feedback">feedback</a> will help us to improve it.'
  }) }}
  {%if locationType == "single location" %}
    {{ govukBackLink({
    text: "Change location",
    href: "/search-location"
  }) }}
  {% endif %}

{% endblock %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">

      <h1 class="govuk-heading-xl">
        {{ serviceName }}
      </h1>

      <p class="govuk-body">Use this service to:</p>

      <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-6">
        <li>check air quality in a local area</li>
        <li>find information on air pollutants</li>
       <!-- That this is not required for the MVP <li>access the local authority website to find out what is being done to improve air quality</li> -->
      </ul>

      {{ govukButton({
        text: "Start now",
        href: "search-location",
        isStartButton: true
      }) }}
    </div>
  </div>  

{% endblock %}
{% block bodyEnd %}
    <script type="module" src="/assets/jquery-3.6.0.min.js"></script>
    <script type="module" src="/assets/govuk-frontend.min.js"></script>
    <script type="module" src="/assets/scripts/toggletips.js"></script>
    <script type="module">
          import { initAll } from '/assets/govuk-frontend.min.js';
          initAll();
    </script>
{% endblock %}
{% block footer %}
    {{ govukFooter({
        meta: {
            items: [{
                href: '/privacy',
                text: 'Privacy'
            }, {
                href: '/cookies',
                text: 'Cookies'
            }, {
                href: '/accessibility',
                text: 'Accessibility Statement'
            }, {
                href: '/terms-and-conditions',
                text: 'Terms and Conditions'
            }]
        }
    }) }}
{% endblock %}